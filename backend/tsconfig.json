{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "CommonJS",
    "target": "ES2020",
    "lib": ["ES2020", "esnext", "dom"],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "strict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "composite": true,
    "declaration": true,
    "rootDir": "server"
  },
  "include": ["server/**/*.ts"],
  "exclude": ["node_modules", "dist", "server/__tests__", "jest.config.js"]
}