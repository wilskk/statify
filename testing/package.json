{
  "name": "statify-testing",
  "version": "1.0.0",
  "description": "Unified testing framework for Statify",
  "scripts": {
    "test": "npm run test:e2e && npm run test:performance:smoke",
    
    "test:e2e": "playwright test --config=testing/e2e/playwright.config.ts",
    "test:e2e:headed": "playwright test --config=testing/e2e/playwright.config.ts --headed",
    "test:e2e:debug": "playwright test --config=testing/e2e/playwright.config.ts --debug",
    "test:e2e:report": "playwright show-report testing/reports/e2e",
    
    "test:performance": "k6 run testing/performance/scenarios/load-test.js",
    "test:performance:smoke": "k6 run testing/performance/scenarios/smoke-test.js",
    "test:performance:stress": "k6 run testing/performance/scenarios/stress-test.js",
    
    "test:unit": "jest --config=testing/unit/jest.config.js",
    "test:integration": "jest --config=testing/integration/jest.config.js",
    
    "test:all": "npm run test:e2e && npm run test:performance && npm run test:unit",
    
    "test:clean": "rimraf testing/reports/**/*",
    "test:setup": "npm install && npx playwright install",
    
    "migrate": "powershell -ExecutionPolicy Bypass -File testing/scripts/migrate-structure.ps1"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "k6": "^0.0.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.0"
  }
}
