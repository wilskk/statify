{
  "name": "statify-testing",
  "version": "1.0.0",
  "description": "Performance testing with k6",
  "scripts": {
    "test": "k6 run tests/performance/basic-test.js",
    "test:smoke": "k6 run --vus 1 --duration 30s tests/performance/basic-test.js",
    "test:load": "k6 run --vus 10 --duration 60s tests/performance/basic-test.js",
    "test:stress": "k6 run --vus 50 --duration 120s tests/performance/basic-test.js",
    "test:report": "k6 run --out json=reports/test-results.json tests/performance/basic-test.js",
    "test:dashboard": "k6 run tests/performance/statify-dashboard-test.js",
    "test:dashboard:load": "k6 run --vus 10 --duration 120s tests/performance/statify-dashboard-test.js",
    "test:multi-page": "k6 run tests/performance/statify-multi-page-test.js",
    "test:all-statify": "k6 run tests/performance/statify-dashboard-test.js && k6 run tests/performance/statify-multi-page-test.js",
    "test:browser:frequencies": "k6 run tests/browser/statify-frequencies-analysis.js",
    "test:browser:frequencies:patient": "k6 run --quiet tests/browser/statify-frequencies-analysis.js",
    "test:browser:smoke": "k6 run tests/browser/statify-simple-smoke.js",
    "test:browser:simple": "k6 run tests/browser/statify-simple-smoke.js",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "playwright:install": "playwright install"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2"
  }
}
